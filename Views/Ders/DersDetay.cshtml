@model WebApp_MVC_Project.Models.Ders
@{
    <h1>Ders Detay</h1>


    <div>
        <form asp-action="DersDetay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" value="@Model.Id" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" value="@Model.Ad" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kredisi" class="control-label"></label>
                <input asp-for="Kredisi" class="form-control" value="@Model.Kredisi" />
                <span asp-validation-for="Kredisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OkulYonetimId" class="control-label"></label>
                <input asp-for="OkulYonetimId" class="form-control" value="@Model.OkulYonetimId" />
                <span asp-validation-for="OkulYonetimId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
}
